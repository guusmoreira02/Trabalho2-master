<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingTop="1dp"
            android:text="Geral"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/Pais"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:addStatesFromChildren="false"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/Idioma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:addStatesFromChildren="false"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/Moeda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:addStatesFromChildren="false"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/Seguranca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Segurança e assinaturas"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:theme="@style/AppTheme.Button"
            android:id="@+id/excluir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Excluir todas as minhas movimentações " />


        <Button
            android:id="@+id/Gerenciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="Gerenciar minhas assinaturas" />

        <Button
            android:id="@+id/Politicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Politicas de privacidade" />

        <Button
            android:id="@+id/termos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="Termos de uso" />

        <Button
            android:id="@+id/ExcluirConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Excluir Conta"
            android:textColor="@android:color/holo_red_dark" />

    </LinearLayout>
</ScrollView>
